<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_background_gradient">

    <TextView
        android:text="@string/select_teams_for_pool"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView_1"
        android:layout_marginTop="15dp"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:layout_below="@+id/textView_1"
        android:background="@drawable/orange_background_border"
        android:layout_above="@+id/linear_button_container">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:id="@+id/gridLayout"
        android:layout_marginBottom="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:background="@color/orangeDark"
            android:shadowColor="@color/orangeLight"
            android:text="Create new Team"
            android:id="@+id/btnCreateTeam"
            android:layout_row="0"
            android:layout_column="2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@color/orangeDark"
            android:shadowColor="@color/orangeLight"
            android:text="@string/teams_stats"
            android:id="@+id/btnTeamStats"
            android:layout_row="1"
            android:layout_column="2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_create_tournament_button"
            android:id="@+id/btnCreateTournament"
            android:background="@color/greenLight"
            android:textColor="@color/white"
            android:padding="5dp"
            android:shadowColor="@color/green"
            android:layout_row="10"
            android:layout_column="2"/>

    </GridLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/gridLayout"
        android:layout_toStartOf="@+id/gridLayout"
        android:layout_alignTop="@+id/gridLayout"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team 1:"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team 2:"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team 3:"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team 4:"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="center_vertical" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_team_2"
            android:layout_below="@+id/select_team_1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:spinnerMode="dropdown"
            android:layout_row="1"
            android:layout_column="1" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_team_3"
            android:layout_below="@+id/select_team_2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:spinnerMode="dropdown"
            android:layout_row="2"
            android:layout_column="1" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_team_4"
            android:layout_below="@+id/select_team_3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:spinnerMode="dropdown"
            android:layout_row="0"
            android:layout_column="3" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_team_1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:spinnerMode="dropdown"
            android:layout_row="0"
            android:layout_column="1" />
    </GridLayout>

</RelativeLayout>

</RelativeLayout>