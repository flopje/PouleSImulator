<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_background_gradient"
    tools:context="com.bonenkamp.PouleSimulator.fragments.TournamentSetUpFragment"
    >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:text="@string/tournament_match_schema_title"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:id="@+id/textView_tournament_matches_overview_title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:padding="15dp"
            android:layout_below="@id/textView_tournament_matches_overview_title"
            android:background="@drawable/orange_background_border">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="6"
                android:id="@+id/gridlayout_overview_matches">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/match_1_text"
                android:layout_marginRight="5dp"

                android:layout_row="1"
                android:layout_column="1"
                android:id="@+id/match_1_label" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/match_1_text"
                android:layout_marginRight="5dp"
                android:layout_row="2"
                android:layout_column="1"
                android:id="@+id/match_2_label" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/match_1_text"
                android:layout_marginRight="5dp"
                android:layout_row="3"
                android:layout_column="1"
                android:id="@+id/match_3_label" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/match_1_text"
                android:layout_marginRight="5dp"
                android:layout_row="4"
                android:layout_column="1"
                android:id="@+id/match_4_label" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/match_1_text"
                android:layout_marginRight="5dp"
                android:layout_row="5"
                android:layout_column="1"
                android:id="@+id/match_5_label" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/match_1_text"
                android:layout_marginRight="5dp"
                android:layout_row="6"
                android:layout_column="1"
                android:id="@+id/match_6_label" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/match1_teamHome"
                android:layout_row="1"
                android:layout_column="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/match2_teamHome"
                android:layout_below="@+id/match1_teamHome"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_row="2"
                android:layout_column="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/match3_teamHome"
                android:layout_below="@+id/match2_teamHome"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_row="3"
                android:layout_column="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/match4_teamHome"
                android:layout_below="@+id/match3_teamHome"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_row="4"
                android:layout_column="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/match5_teamHome"
                android:layout_below="@+id/match3_teamHome"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_row="5"
                android:layout_column="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/match6_teamHome"
                android:layout_below="@+id/match5_teamHome"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_row="6"
                android:layout_column="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "

                android:id="@+id/match1_line"
                android:layout_row="1"
                android:layout_column="3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "

                android:id="@+id/match2_line"
                android:layout_below="@+id/match1_teamHome"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_row="2"
                android:layout_column="3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "

                android:id="@+id/match3_teamLine"
                android:layout_below="@+id/match2_teamHome"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_row="3"
                android:layout_column="3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "

                android:id="@+id/match4_line"
                android:layout_below="@+id/match3_teamHome"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_row="4"
                android:layout_column="3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/match5_line"
                android:text=" - "
                android:layout_below="@+id/match3_teamHome"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_row="5"
                android:layout_column="3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/match6_line"
                android:text=" - "
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_row="6"
                android:layout_column="3"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/match1_teamAway"
                android:layout_row="1"
                android:layout_column="4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/match2_teamAway"
                android:layout_below="@+id/match1_teamAway"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_row="2"
                android:layout_column="4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/match3_teamAway"
                android:layout_below="@+id/match2_teamAway"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_row="3"
                android:layout_column="4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/match4_teamAway"
                android:layout_below="@+id/match3_teamAway"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_row="4"
                android:layout_column="4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/match5_teamAway"
                android:layout_below="@+id/match3_teamAway"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_row="5"
                android:layout_column="4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/match6_teamAway"
                android:layout_below="@+id/match5_teamAway"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_row="6"
                android:layout_column="4"/>

        </GridLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gridlayout_overview_matches"
            android:layout_alignParentBottom="true"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start tournament!"
                android:id="@+id/btnStartTournament"
                android:background="@color/orangeDark"
                android:shadowColor="@color/orangeLight"
                android:textColor="@color/white"
                android:padding="5dp"
                android:layout_marginBottom="15dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
